@echo off
chcp 65001 >nul
color 0B
title نشر المشروع بدون قاعدة بيانات

echo.
echo ════════════════════════════════════════════════════════════
echo         نشر مشروع دليل شوقي (بدون قاعدة بيانات)
echo ════════════════════════════════════════════════════════════
echo.

echo ✅ المشروع يستخدم روابط Google Drive فقط
echo ✅ لا يحتاج قاعدة بيانات
echo.

echo [الخطوة 1/3] تثبيت المكتبات
echo ────────────────────────────────────────
npm install
if %errorlevel% neq 0 (
    color 0C
    echo ❌ فشل تثبيت المكتبات
    pause
    exit /b 1
)
echo ✅ تم تثبيت المكتبات
echo.

echo [الخطوة 2/3] بناء المشروع
echo ────────────────────────────────────────
npm run build
if %errorlevel% neq 0 (
    color 0C
    echo ❌ فشل بناء المشروع
    pause
    exit /b 1
)
echo ✅ تم بناء المشروع بنجاح
echo.

echo [الخطوة 3/3] النشر على Vercel
echo ────────────────────────────────────────
vercel --prod

if %errorlevel% equ 0 (
    color 0A
    echo.
    echo ════════════════════════════════════════════════════════════
    echo              ✅ تم النشر بنجاح! ✅
    echo ════════════════════════════════════════════════════════════
    echo.
    echo 🌐 المشروع الآن متاح على الإنترنت!
    echo.
    echo 📝 ملاحظات:
    echo    ✓ المشروع يعمل بدون قاعدة بيانات
    echo    ✓ جميع الملفات على Google Drive
    echo    ✓ الروابط تعمل بشكل مباشر
    echo.
) else (
    color 0E
    echo.
    echo ════════════════════════════════════════════════════════════
    echo              ⚠️ حدثت مشكلة في النشر
    echo ════════════════════════════════════════════════════════════
    echo.
    echo جرب:
    echo 1. vercel login
    echo 2. vercel --prod
    echo.
)

echo.
pause
